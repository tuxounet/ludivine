{
  "name": "ludivine",
  "version": "0.1.6",
  "description": "",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "rollup -c",
    "start": "node .",
    "predev": "npm install --prefer-offline",
    "dev": "nodemon",
    "lint": "eslint ./ --fix",
    "nuke": "rm -rf node_modules package-lock.json",
    "prenuke": "npm run clean",
    "clean": "rm -rf dist coverage logs run home modules",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:watch-coverage": "jest --watch --coverage",
    "exe": "pkg . --out-path ./out --compress GZip"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tuxounet/ludivine.git"
  },
  "keywords": [],
  "author": {
    "email": "krux@krux.fr",
    "name": "Christophe Tiraoui",
    "url": "https://github.com/tuxounet/ludivine"
  },
  "license": "gplv3",
  "bugs": {
    "url": "https://github.com/tuxounet/ludivine/issues"
  },
  "homepage": "https://github.com/tuxounet/ludivine#readme",
  "dependencies": {
    "@ludivine/runtime": "^0.0.4",
    "body-parser": "^1.20.1",
    "command-exists": "1.2.9",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "web-push": "^3.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/command-exists": "^1.2.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.3",
    "@types/web-push": "^3.3.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "pkg": "^5.8.0",
    "prettier": "^2.7.1",
    "rollup": "^3.2.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "pkg": {
    "targets": [
      "node18-linuxstatic-armv7",
      "node18-linuxstatic-x64",
      "node18-linuxstatic-arm64",
      "node18-win-x64"
    ]
  },
  "files": [
    "assets/",
    "dist/",
    "LICENSE"
  ],
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": ">=16.0.0 <19.0.0"
  }
